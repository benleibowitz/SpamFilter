<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="bayesemailscoringsystem" name="bayesemailscoring" class="email.BayesEmailScoringSystem"/>
		
	<!-- Naive Bayes Email Algorithm -->
	<bean id="emailspamalgorithm" name="bayesemailalgorithm" class="email.BayesEmailAlgorithm">
		<constructor-arg name="scoringSystem" ref="bayesemailscoringsystem" type="email.BayesEmailScoringSystem"/>
	</bean>
	 
	<!-- Test Algorithm, returns true -->
	<bean id="testspamalgorithm" name="testalgorithm" class="email.TestAlgo">
		<constructor-arg name="scoringSystem" ref="bayesemailscoringsystem" type="email.BayesEmailScoringSystem"/>
	</bean>
		
	<bean name="emailprobabilitycalculator" class="email.ProbabilityCalculator">
		<constructor-arg name="algorithm" ref="emailspamalgorithm" type="email.SpamAlgorithm"/>
	</bean>
	<bean name="emailprobabilitytrainer" class="email.BayesEmailProbabilityTrainer">
		<constructor-arg name="scoringSystem" ref="bayesemailscoringsystem" type="email.BayesEmailScoringSystem"/>
	</bean>
	
</beans>
